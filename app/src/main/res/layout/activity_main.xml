<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_blue_color">


        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/arc_progress"
            android:layout_width="216dp"
            android:layout_height="215dp"
            android:layout_marginEnd="145dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="145dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="75dp"
            android:clickable="true"
            android:padding="8dp"
            android:visibility="visible"
            app:arc_bottom_text="RAM"
            app:arc_finished_color="#ffffff"
            app:arc_progress="68"
            app:arc_text_color="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/arc_progress2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="104dp"
            android:clickable="true"
            android:padding="6dp"
            app:arc_bottom_text="SDCARD"
            app:arc_finished_color="#ffffff"
            app:arc_text_color="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/arc_progress"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="310dp"
            android:layout_height="225dp"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="@android:color/background_light"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/filesImageID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="48dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginRight="40dp"
                    android:src="@mipmap/videoico"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/temperatureImageID"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="23dp"
                    android:src="@mipmap/temprature"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/folderImageID"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/folderImageID"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="25dp"
                    android:src="@mipmap/trashbin"
                    app:layout_constraintStart_toEndOf="@+id/processorImageID"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/processorImageID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="32dp"
                    android:src="@mipmap/app_launch"
                    app:layout_constraintBottom_toTopOf="@+id/exrt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/exrt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="48dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:text="Phone Booster"
                    android:textColor="@color/deepPurple360"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/apkImageID"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/processorImageID" />

                <ImageButton
                    android:id="@+id/apkImageID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="48dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/ripple_effects"
                    android:src="@mipmap/apkico"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:text="App Uninstaller"
                    android:textColor="@color/deepPurple360"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/apkImageID"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageButton
                    android:id="@+id/dashMp3Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="48dp"
                    android:background="@drawable/ripple_effects"
                    android:soundEffectsEnabled="true"
                    android:src="@mipmap/mp3ico"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/filesImageID"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/apkImageID" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Mp3"
                    android:textColor="@color/deepPurple360"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dashMp3Id"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="47dp"
                    android:layout_marginRight="47dp"
                    android:text="Video"
                    android:textColor="@color/deepPurple360"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/filesImageID"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginStart="22dp"
                    android:text="Junk Cleaner"
                    android:textColor="@color/deepPurple360"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/exrt"
                    app:layout_constraintTop_toBottomOf="@+id/folderImageID" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="29dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="29dp"
                    android:layout_marginStart="28dp"
                    android:text="CPU Tem"
                    android:textColor="@color/deepPurple360"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/temperatureImageID" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>


    </android.support.constraint.ConstraintLayout>

</LinearLayout>