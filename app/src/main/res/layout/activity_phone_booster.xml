<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".activity.phoneBoosterActivity">


    <Button
        android:id="@+id/clenerBT"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/lay_cor"
        android:clickable="true"
        android:focusable="true"
        android:text="Tap to Clean"
        android:textColor="@color/white"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/runningAppTemp"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/r12"
        android:layout_marginTop="36dp"
        android:background="@drawable/gradient_redo"
        tools:ignore="UnknownId">


        <TextView
            android:id="@+id/textTemperatureView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="53dp"
            android:layout_marginTop="14dp"
            android:text="29"
            android:textColor="@color/fuckingcolor"
            android:textSize="36sp"
            android:textStyle="bold" />


    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:contentPadding="9dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/showAppRecylerID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#FF512F"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar235"
            layout="@layout/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>